{% extends 'main_template.html.twig' %}
{% block title %}
            {{passion_name}} na eswu.konin.pl
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(rgba(255,255,255,0.4), rgba(255,255,255,0.4)),
                    url({{passion_image_name}});
            background-size:contain;
            background-repeat: no-repeat;
            background-size: 100% 100%;
            min-height: 100vh;
        }
        b { font-weight: bold; }
        * { font-family: verdana; COLOR: black;}
        menu {
            background-color: rgba(190, 210, 230, 0.7);
            height: 100%;
            border-radius: 10px;
            margin: 5px;
        }
    </style>
{% endblock %}
{% block left_content %}
    <button onclick="location.href = '/zainteresowania';" style="min-width: 50%; min-height: 5%; font-size: 20px; margin: 5%; border-radius: 10px;">&xlarr; Ogólna lista zainteresowań</button>
    <div style="text-align: center;">
    {% for passion in passionItems %}
        <hr>
        <h2 style="line-height: 2.0;"><a href="./{{passion_name}}/{{passion.name}}">{{passion.name}}</a></h2>
    {% endfor %}
    </div>
{% endblock %}
{% block center_content %}
    <h1 style="font-size: 50pt;">{{passion_name}}</h1>
    <p style="line-height: 1.4; font-size: 22px;">{{passion_description}}</p>
{% endblock %}