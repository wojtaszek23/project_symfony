{% extends 'base.html.twig' %}

{% block stylesheets %}
        {{ parent() }}
        <style>
        {% block bodystyle %}
            body {
                background: linear-gradient(rgba(255,255,255,{% block alpha1 %}0.7{% endblock %}), rgba(255,255,255,{% block alpha2 %}0.7{% endblock %})),
                    url(
                {% block background_image %}
                        images/gory.jpg
                {% endblock %}        
                );
                
                background-size:contain;
                background-repeat: no-repeat;
                background-size: 100% 100%;
                min-height: 100vh;
                box-sizing: border-box;
                display: flex;
                flex-wrap: wrap;
            }
        {% endblock %}
        menu {flex: 23%; max-width: 23%; min-height: 100%; padding: 0; margin-right: 1%;}
        center {flex: 48%; min-height: 100%; padding: 0; margin-left: 1%; margin-right: 1%;}
        aside {flex: 23%; max-width: 23%; min-height: 100%; padding: 0; margin-left: 1%;}
        </style>
{% endblock %}
{% block body %}
    <menu>
            {% block left_content %}
            {% endblock %}
    </menu>
    <center>
            {% block center_content %}
            {% endblock %}
    </center>
    <aside>
            {% block right_content %}
            {% endblock %}
    </aside>
{% endblock %}