{% extends 'przepisy/main.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block alpha1 %}{{0.5}}{% endblock %} {% block alpha2 %}{{0.5}}{% endblock %}
{% block left_content2 %}
    <div style="text-align: center;">
    <hr>
    <h2>Sk≈Çadniki:</h2>
    {% for ingredient in chosen_recipe.ingredients %}
        <hr>
        <h3>{{ingredient.name}}</h3>
    {% endfor %}
