{% block center_content %}
    <h1 style="font-size: 40pt; margin: 1%;">{{chosen_recipe.name}}</h1>
    
    <img src={{chosen_recipe.imageName}} style="min-width: 5%;min-height: 5%; max-width: 100%; max-height: 30%; border-radius: 10px;"></img>
    <div style="clear: both"></div>
    <hr>
    <p style="font-size: 1.4em; text-align: left; width: 90%;"><b>{{chosen_recipe.shortDescription}}</b></p>
    <hr>
    <h2>Przygotowanie:</h2>
    <p style="font-size: 1.4em; line-height: 1.4; text-align: left; width: 90%;">{{chosen_recipe.preparation|nl2br}}</p>
    <hr>
    <p style="font-size: 1.0em; text-align: right;">{{chosen_recipe.createdAt|date('d-m-Y')}}</p>
{% endblock %}